#include <GL/glut.h>

/* Function to draw the complete scene */
void renderScene() {

    /* Grass */
    glColor3f(0.13f, 0.55f, 0.13f);
    glBegin(GL_POLYGON);
        glVertex2f(0.0f, 0.0f);
        glVertex2f(1.0f, 0.0f);
        glVertex2f(1.0f, 0.2f);
        glVertex2f(0.0f, 0.2f);
    glEnd();

    /* House Base */
    glColor3f(0.96f, 0.87f, 0.70f);
    glBegin(GL_POLYGON);
        glVertex2f(0.2f, 0.2f);
        glVertex2f(0.8f, 0.2f);
        glVertex2f(0.8f, 0.6f);
        glVertex2f(0.2f, 0.6f);
    glEnd();

    /* Roof */
    glColor3f(0.75f, 0.13f, 0.13f);
    glBegin(GL_TRIANGLES);
        glVertex2f(0.2f, 0.6f);
        glVertex2f(0.8f, 0.6f);
        glVertex2f(0.5f, 0.9f);
    glEnd();

    /* Door */
    glColor3f(0.55f, 0.27f, 0.07f);
    glBegin(GL_POLYGON);
        glVertex2f(0.45f, 0.2f);
        glVertex2f(0.55f, 0.2f);
        glVertex2f(0.55f, 0.4f);
        glVertex2f(0.45f, 0.4f);
    glEnd();

    /* Door Handle */
    glColor3f(1.0f, 0.84f, 0.0f);
    glBegin(GL_POLYGON);
        glVertex2f(0.47f, 0.3f);
        glVertex2f(0.48f, 0.3f);
        glVertex2f(0.48f, 0.35f);
        glVertex2f(0.47f, 0.35f);
    glEnd();

    /* Left Window */
    glColor3f(0.53f, 0.81f, 0.98f);
    glBegin(GL_POLYGON);
        glVertex2f(0.28f, 0.35f);
        glVertex2f(0.38f, 0.35f);
        glVertex2f(0.38f, 0.45f);
        glVertex2f(0.28f, 0.45f);
    glEnd();

    /* Right Window */
    glBegin(GL_POLYGON);
        glVertex2f(0.62f, 0.35f);
        glVertex2f(0.72f, 0.35f);
        glVertex2f(0.72f, 0.45f);
        glVertex2f(0.62f, 0.45f);
    glEnd();

    /* Window Borders */
    glColor3f(0.0f, 0.0f, 0.0f);
    glLineWidth(2.0f);

    glBegin(GL_LINE_LOOP);
        glVertex2f(0.28f, 0.35f);
        glVertex2f(0.38f, 0.35f);
        glVertex2f(0.38f, 0.45f);
        glVertex2f(0.28f, 0.45f);
    glEnd();

    glBegin(GL_LINE_LOOP);
        glVertex2f(0.62f, 0.35f);
        glVertex2f(0.72f, 0.35f);
        glVertex2f(0.72f, 0.45f);
        glVertex2f(0.62f, 0.45f);
    glEnd();
}

/* Display callback */
void display() {
    glClear(GL_COLOR_BUFFER_BIT);
    renderScene();
    glFlush();
}

/* Initialization */
void initialize() {
    glClearColor(0.68f, 0.85f, 0.90f, 1.0f);
    glMatrixMode(GL_PROJECTION);
    glLoadIdentity();
    glOrtho(0.0, 1.0, 0.0, 1.0, -1.0, 1.0);
}

/* Main function */
int main(int argc, char** argv) {
    glutInit(&argc, argv);
    glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB);
    glutInitWindowSize(500, 500);
    glutInitWindowPosition(100, 100);
    glutCreateWindow("Simple House Scene");
    initialize();
    glutDisplayFunc(display);
    glutMainLoop();
    return 0;
}

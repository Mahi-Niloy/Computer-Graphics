#include <GL/glut.h>
#include <math.h>

/* Horizontal position of the car */
float carX = -10.0f;

/* Function to draw a hexagonal wheel */
void drawWheel(float cx, float cy, float radius)
{
    glBegin(GL_POLYGON);
    for (int i = 0; i < 6; i++) {
        float angle = i * 60.0f * (3.1416f / 180.0f);
        float x = cx + radius * cos(angle) + carX;
        float y = cy + radius * sin(angle);
        glVertex2f(x, y);
    }
    glEnd();
}

/* Display callback for animation */
void display()
{
    glClear(GL_COLOR_BUFFER_BIT);

    /* Update car position */
    if (carX < 10.0f)
        carX += 0.01f;
    else
        carX = -10.0f;

    glutPostRedisplay();

    /* Car body */
    glColor3f(1.0f, 1.0f, 1.0f);
    glBegin(GL_QUADS);
        glVertex2f(-0.3f + carX, 0.1f);
        glVertex2f( 0.9f + carX, 0.1f);
        glVertex2f( 0.9f + carX,-0.1f);
        glVertex2f(-0.3f + carX,-0.1f);
    glEnd();

    /* Upper part of the car */
    glBegin(GL_QUADS);
        glVertex2f(-0.1f + carX, 0.3f);
        glVertex2f( 0.5f + carX, 0.3f);
        glVertex2f( 0.7f + carX, 0.1f);
        glVertex2f(-0.2f + carX, 0.1f);
    glEnd();

    /* Wheels */
    drawWheel(0.0f, -0.15f, 0.1f);
    drawWheel(0.6f, -0.15f, 0.1f);

    glFlush();
}

/* Initialization */
void init()
{
    glClearColor(0.8f, 0.0f, 0.0f, 1.0f);
    glOrtho(-10, 10, -10, 10, -1, 1);
}

/* Main function */
int main(int argc, char** argv)
{
    glutInit(&argc, argv);
    glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB);
    glutInitWindowSize(600, 600);
    glutCreateWindow("2D Moving Car Animation");

    init();
    glutDisplayFunc(display);
    glutMainLoop();

    return 0;
}
